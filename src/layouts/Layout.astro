---
export interface Props {
  title: string;
}

const isPost = Astro.url?.pathname?.includes('/post')
const isSnippet = Astro.url?.pathname?.includes('/snippet')
const isNotHome = Astro?.url?.pathname !== '/'
let { title } = Astro.props as Props;

if (isPost || isSnippet) {
  title = Astro.props?.content?.title // This is for MD files
}

---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title}</title>
</head>

<body>
  <main class='max-w-2xl mx-auto px-2 pt-24'>
    {isNotHome && (
    <a href='/'>
      <button class='mb-4 py-1 px-2 hover:bg-neutral-800 transition-all duration-100 rounded-md'>Back</button>
    </a>
    )}
    {(isPost || isSnippet) && (
    <h1 class='text-4xl font-bold'>{title}</h1>
    )}
    <slot />
  </main>
</body>

</html>
<style is:global>
  body {
    @apply bg-neutral-900 text-neutral-50;
  }
</style>
