---
export interface Props {
  links?: { label: string; href: string; target?: HTMLAttributeAnchorTarget }[];
  title: string;
}

const { title, links } = Astro.props as Props;
---

<section class='flex mb-12'>
  <h4 class='w-24 text-neutral-400'>{title}</h4>
  <ul>
    {links?.map(({label,...link}) => (
    <a {...link}>
      <li
        class='mb-2 hover:text-purple-500 hover:text-transparent hover:bg-clip-text hover:bg-gradient-to-r hover:from-purple-400 hover:to-violet-800'>
        {label}
      </li>
    </a>
    ))}
  </ul>
</section>
